@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Web
@using SeamLessGoWeb.Services.Interfaces
@using SeamLessGoWeb.Services.Auth
@using SeamLessGoWeb.Data
@using SeamLessGoWeb.Components.Layout
@page "/"
@page "/login"
@layout EmptyLayout
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@using SeamLessGoWeb.Models

<div dir="ltr" style="display:flex;height:100vh;direction:ltr;font-family:'Almarai',sans-serif;">
    <!-- Left side (branding) - Primary Color Background -->
    <div style="flex:1;background:linear-gradient(135deg, #902c94 0%, #b03aa0 100%);padding:60px;display:flex;flex-direction:column;justify-content:center;align-items:center;box-shadow:2px 0 20px rgba(0,0,0,0.1);">
        <div dir="rtl" style="direction:rtl;text-align:center;color:white;">
            <div style="margin-bottom:30px;">
                <img src="/img/logo.svg" alt="Logo" style="width:120px;height:120px;filter:drop-shadow(0 4px 8px rgba(0,0,0,0.3));" />
            </div>
            <h1 style="font-size:2.8rem;font-weight:800;margin-bottom:20px;text-shadow:0 2px 4px rgba(0,0,0,0.2);">
                نظام التوزيع والمبيعات
            </h1>
            <p style="max-width:350px;font-size:1.2rem;line-height:1.8;font-weight:400;opacity:0.95;">
                إدارة ذكية لعمليات البيع والتوزيع مع تتبع شامل للمخزون والعملاء
            </p>
            <div style="margin-top:40px;display:flex;gap:30px;justify-content:center;opacity:0.9;">
                <div style="text-align:center;">
                    <div style="font-size:2rem;font-weight:700;">300+</div>
                    <div style="font-size:0.9rem;margin-top:5px;">عميل نشط</div>
                </div>
                <div style="text-align:center;">
                    <div style="font-size:2rem;font-weight:700;">98%</div>
                    <div style="font-size:0.9rem;margin-top:5px;">معدل الرضا</div>
                </div>
                <div style="text-align:center;">
                    <div style="font-size:2rem;font-weight:700;">5000+</div>
                    <div style="font-size:0.9rem;margin-top:5px;">طلبية</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right side (login form) - White Background -->
    <div style="flex:1;display:flex;justify-content:center;align-items:center;background-color:#fff;padding:40px;">
        <div dir="rtl" style="width:100%;max-width:420px;direction:rtl;">
            <div style="text-align:right;margin-bottom:40px;">
                <h2 style="color:#2c3e50;margin-bottom:10px;font-size:2rem;font-weight:700;">مرحباً بعودتك</h2>
                <p style="color:#7f8c8d;font-size:1rem;font-weight:400;">قم بتسجيل الدخول للوصول إلى حسابك</p>
            </div>

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
                <div style="margin-bottom:25px;">
                    <label style="display:block;text-align:right;margin-bottom:10px;color:#2c3e50;font-weight:600;font-size:0.95rem;">
                        اسم المستخدم أو البريد الإلكتروني
                    </label>
                    <InputText class="form-control" @bind-Value="loginModel.UserName"
                               style="width:100%;padding:14px 16px;border:2px solid #e0e0e0;border-radius:8px;text-align:right;direction:rtl;font-size:16px;font-family:'Almarai',sans-serif;transition:all 0.3s;"
                               placeholder="أدخل اسم المستخدم أو البريد الإلكتروني" />
                </div>

                <div style="margin-bottom:25px;">
                    <label style="display:block;text-align:right;margin-bottom:10px;color:#2c3e50;font-weight:600;font-size:0.95rem;">
                        كلمة المرور
                    </label>
                    <InputText type="password" class="form-control" @bind-Value="loginModel.Password"
                               style="width:100%;padding:14px 16px;border:2px solid #e0e0e0;border-radius:8px;text-align:right;direction:rtl;font-size:16px;font-family:'Almarai',sans-serif;transition:all 0.3s;"
                               placeholder="أدخل كلمة المرور" />
                </div>

                <div style="margin-bottom:25px;display:flex;justify-content:space-between;align-items:center;">
                    <a href="/forgot-password" style="color:#902c94;text-decoration:none;font-size:0.9rem;font-weight:600;">هل نسيت كلمة المرور؟</a>
                    <label style="display:flex;align-items:center;gap:8px;cursor:pointer;font-size:0.9rem;color:#555;">
                        <input type="checkbox" style="width:18px;height:18px;accent-color:#902c94;" />
                        <span>تذكرني</span>
                    </label>
                </div>

                <button type="submit"
                        style="width:100%;padding:16px;background:linear-gradient(135deg, #902c94 0%, #b03aa0 100%);color:white;border:none;border-radius:8px;font-size:17px;font-weight:700;cursor:pointer;transition:all 0.3s;box-shadow:0 4px 12px rgba(144,44,148,0.3);font-family:'Almarai',sans-serif;">
                    تسجيل الدخول
                </button>
            </EditForm>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div dir="rtl" style="margin-top:20px;padding:14px 16px;background-color:#ffebee;border:2px solid #ef5350;border-radius:8px;text-align:right;animation:shake 0.5s;">
                    <div style="display:flex;align-items:center;gap:10px;">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="#c62828">
                            <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" />
                        </svg>
                        <p style="color:#c62828;margin:0;font-weight:600;">@errorMessage</p>
                    </div>
                </div>
            }

            <div dir="rtl" style="margin-top:30px;text-align:center;padding-top:30px;border-top:1px solid #e0e0e0;">
                <p style="color:#7f8c8d;font-size:0.95rem;">
                    ليس لديك حساب؟
                    <a href="/register" style="color:#902c94;text-decoration:none;font-weight:700;margin-right:5px;">سجل الآن</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Input focus styles */
    .form-control:focus {
        outline: none;
        border-color: #902c94 !important;
        box-shadow: 0 0 0 3px rgba(144, 44, 148, 0.1) !important;
    }

    /* Button hover effect */
    button[type="submit"]:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(144, 44, 148, 0.4);
    }

    button[type="submit"]:active {
        transform: translateY(0);
    }

    /* Link hover effect */
    a:hover {
        text-decoration: underline !important;
    }

    /* Shake animation for error */
    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        10%, 30%, 50%, 70%, 90% {
            transform: translateX(-5px);
        }

        20%, 40%, 60%, 80% {
            transform: translateX(5px);
        }
    }

    /* Placeholder color */
    .form-control::placeholder {
        color: #bbb;
        font-weight: 400;
    }
</style>

@code {
    [SupplyParameterFromForm]
    private UserLoginModel loginModel { get; set; } = new();

    string errorMessage = "";

    private async Task HandleLogin()
    {
        try
        {
            // Clear previous errors
            errorMessage = "";

            // Validate inputs
            if (string.IsNullOrWhiteSpace(loginModel.UserName))
            {
                errorMessage = "يرجى إدخال اسم المستخدم أو البريد الإلكتروني";
                return;
            }

            if (string.IsNullOrWhiteSpace(loginModel.Password))
            {
                errorMessage = "يرجى إدخال كلمة المرور";
                return;
            }

            var result = await UserService.LoginAsync(loginModel.UserName, loginModel.Password);

            if (result == null)
            {
                errorMessage = "اسم المستخدم أو كلمة المرور غير صحيحة";
                return;
            }

           await ((CustomAuthStateProvider)AuthStateProvider).SaveSession(result);
            Nav.NavigateTo("/Home", true);
        }
        catch (Exception ex)
        {
            errorMessage = "حدث خطأ أثناء تسجيل الدخول. يرجى المحاولة مرة أخرى";
        }
    }
}
